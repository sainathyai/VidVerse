# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Database (Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/vidverse
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis (Upstash)
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Object Storage (S3/R2)
S3_BUCKET_NAME=vidverse-assets
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# Authentication
CLERK_SECRET_KEY=sk_test_your-key
CLERK_PUBLISHABLE_KEY=pk_test_your-key

# Replicate API
REPLICATE_API_TOKEN=r8_your-token

# OpenAI (for LangGraph agentic mode)
OPENAI_API_KEY=sk-your-key

# Anthropic (alternative LLM)
ANTHROPIC_API_KEY=sk-ant-your-key

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Monitoring
DATADOG_API_KEY=your-datadog-key
DATADOG_APP_KEY=your-datadog-app-key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Cost Management
MAX_COST_PER_JOB=50.00
BUDGET_ALERT_THRESHOLD=0.8

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg

# Feature Flags
ENABLE_AGENTIC_MODE=true
ENABLE_BRAND_KIT=true
ENABLE_COST_TRACKING=true

